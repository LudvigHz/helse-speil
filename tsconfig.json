{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es5",
        "lib": ["esnext", "dom", "dom.iterable"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "external-types": ["./src/types/types.external"],
            "internal-types": ["./src/types/types.internal"]
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "jest.config.js",
        "src/setupTests.ts",
        "__mock-data__",
        "__mocks__",
        "e2e-tests",
        "dist"
    ],
    "types": ["typePatches"]
}
