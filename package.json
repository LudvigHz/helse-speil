{
    "name": "helse-speil",
    "version": "1.0.0",
    "author": "Team BÃ¸mlo",
    "description": "Innsyn i saksbehandling av sykepenger",
    "repository": {
        "type": "git",
        "url": "https://github.com/navikt/helse-speil.git"
    },
    "license": "MIT",
    "scripts": {
        "dev": "lerna run dev --stream",
        "serve": "lerna run serve --stream",
        "mock": "lerna run mock",
        "build": "lerna run build --stream",
        "test": "lerna run test --stream",
        "test-ci": "lerna run test-ci --stream",
        "clean": "lerna run clean --stream && npx jest --clearCache && rm -rf node_modules",
        "bootstrap": "npm i && lerna bootstrap -- --legacy-peer-deps",
        "generate-graphql": "graphql-codegen --config graphql-codegen.yml",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,css,json,md}": [
            "prettier --write"
        ],
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix --rule react-hooks/exhaustive-deps:off"
        ]
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^3.3.1",
        "@graphql-codegen/introspection": "^3.0.1",
        "@graphql-codegen/typescript": "^3.0.4",
        "@graphql-codegen/typescript-operations": "^3.0.4",
        "@trivago/prettier-plugin-sort-imports": "^4.1.1",
        "@types/node": "^20.2.5",
        "@types/uuid": "^9.0.1",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "husky": "^8.0.3",
        "lerna": "^6.6.2",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.1.3"
    },
    "engines": {
        "node": ">=14.17.0",
        "npm": ">=6.14.0"
    },
    "snyk": true
}
