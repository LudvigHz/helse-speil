{
    "name": "helse-speil",
    "version": "1.0.0",
    "author": "Team BÃ¸mlo",
    "description": "Innsyn i saksbehandling av sykepenger",
    "repository": {
        "type": "git",
        "url": "https://github.com/navikt/helse-speil.git"
    },
    "license": "MIT",
    "scripts": {
        "dev": "lerna run dev --stream",
        "serve": "lerna run serve --stream",
        "mock": "lerna run mock --stream",
        "build": "lerna run build --stream",
        "test": "lerna run test --stream",
        "test-ci": "lerna run test-ci --stream",
        "clean": "rm -rf node_modules && rm -rf packages/backend/node_modules && rm -rf packages/frontend/node_modules && lerna run clean --stream && npx jest --clearCache",
        "bootstrap": "npm i && lerna bootstrap -- --legacy-peer-deps",
        "e2e-test": "e2e-tests/run.sh",
        "e2e-test-local": "e2e-tests/run.sh; e2e-tests/stop.sh",
        "generate-graphql": "graphql-codegen --config graphql-codegen.yml",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,css,json,md}": [
            "prettier --write"
        ],
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix --rule react-hooks/exhaustive-deps:off"
        ]
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^2.5.0",
        "@graphql-codegen/introspection": "^2.1.1",
        "@graphql-codegen/typescript": "^2.4.3",
        "@graphql-codegen/typescript-operations": "^2.2.4",
        "@trivago/prettier-plugin-sort-imports": "^3.3.0",
        "@types/uuid": "^9.0.0",
        "cypress": "^8.6.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.2",
        "lerna": "^5.3.0",
        "lint-staged": "^11.2.3",
        "prettier": "^2.4.1"
    },
    "engines": {
        "node": ">=14.17.0",
        "npm": ">=6.14.0"
    },
    "snyk": true
}
